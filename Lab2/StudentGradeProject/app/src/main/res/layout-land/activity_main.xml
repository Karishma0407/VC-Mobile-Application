<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="295dp"
        android:layout_height="68dp"
        android:text="@string/student_name_text_view"
        android:layout_gravity="center_horizontal"
         />

    <TextView
        android:id="@+id/student_grade_text_view"
        android:layout_width="295dp"
        android:layout_height="68dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="66dp"
        android:text="@string/student_grade_text_view" />

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="228dp"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/display_grade_button"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="@string/display_grade_button" />

        <Button
            android:id="@+id/prev_button"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:text="@string/prev_button" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/next_button" />
    </LinearLayout>

</FrameLayout>