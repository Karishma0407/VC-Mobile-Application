<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        >

    <EditText
        android:id="@+id/course_name_edit_text"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/course_name_edit_text"
        android:layout_gravity="center_horizontal"
         />

    <EditText
        android:id="@+id/course_max_enrl_edit_text"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/course_max_enrl_edit_text"
        />

    <EditText
        android:id="@+id/course_credits_edit_text"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/course_credits_edit_text"
         />

    <EditText
        android:id="@+id/course_no_edit_text"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/course_no_edit_text"
         />
    </LinearLayout>
    <Button
        android:id="@+id/course_update_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/course_update_button"
        />
</FrameLayout>
