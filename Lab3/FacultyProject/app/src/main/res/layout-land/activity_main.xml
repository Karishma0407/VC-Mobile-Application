<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/faculty_id_text_view"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginTop="22dp"
            android:text="@string/faculty_id_text_view" />

        <TextView
            android:id="@+id/faculty_LName_text_view"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:layout_gravity="left|center_horizontal"
            android:text="@string/faculty_LName_text_view" />

        <TextView
            android:id="@+id/faculty_FName_text_view"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:layout_gravity="left|center_horizontal"
            android:text="@string/faculty_FName_text_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/faculty_salary_text_view"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="@string/faculty_salary_text_view"
        android:layout_gravity="right|center_horizontal"
        />

    <TextView
        android:id="@+id/faculty_bonus_text_view"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:text="@string/faculty_bonus_text_view"
        android:layout_gravity="right|center_horizontal"
       />

    <TextView
        android:id="@+id/display_bonus_text_view"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:text="@string/display_bonus_text_view"
        android:layout_gravity="right|center_horizontal"
       />
    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="156dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:text="@string/prev_button"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:text="@string/next_button"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/faculty_details_button"
            android:layout_width="286dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/faculty_details_button"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/all_faculty_button"
            android:layout_width="286dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/all_faculty_button" />
    </LinearLayout>

</FrameLayout>