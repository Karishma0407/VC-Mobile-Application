<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="295dp"
        android:layout_height="68dp"
        android:text="@string/student_name_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/student_grade_text_view"
        android:layout_width="295dp"
        android:layout_height="68dp"
        android:text="@string/student_grade_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/student_name_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/student_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_name_text_view"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/display_grade_button"
        android:layout_width="299dp"
        android:layout_height="80dp"
        android:text="@string/display_grade_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/student_grade_text_view"
        app:layout_constraintStart_toStartOf="@+id/student_grade_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_grade_text_view"
        app:layout_constraintVertical_bias="0.257" />

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="76dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/display_grade_button"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/display_grade_button"
        app:layout_constraintTop_toBottomOf="@+id/display_grade_button"
        app:layout_constraintVertical_bias="0.343">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="150dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:text="@string/prev_button"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="546dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="150dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="26dp"
            android:text="@string/next_button"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="546dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>