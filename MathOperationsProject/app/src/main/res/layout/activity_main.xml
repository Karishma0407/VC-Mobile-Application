<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_string_edit_text_y"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/input_string_edit_text_y"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_string_edit_text_x"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_string_edit_text_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />

    <EditText
        android:id="@+id/input_string_edit_text_x"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/input_string_edit_text_x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/division_text_view"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginBottom="68dp"
        android:text="@string/division_text_view"
        app:layout_constraintBottom_toTopOf="@+id/calculate_button"
        app:layout_constraintEnd_toEndOf="@+id/multiply_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/multiply_text_view" />

    <TextView
        android:id="@+id/addition_text_view"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:text="@string/addition_text_view"
        app:layout_constraintBottom_toTopOf="@+id/subtraction_text_view"
        app:layout_constraintEnd_toEndOf="@+id/input_string_edit_text_y"
        app:layout_constraintStart_toStartOf="@+id/input_string_edit_text_y"
        app:layout_constraintTop_toBottomOf="@+id/input_string_edit_text_y"
        app:layout_constraintVertical_bias="0.586" />

    <TextView
        android:id="@+id/subtraction_text_view"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginBottom="28dp"
        android:text="@string/subtraction_text_view"
        app:layout_constraintBottom_toTopOf="@+id/multiply_text_view"
        app:layout_constraintEnd_toEndOf="@+id/addition_text_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/addition_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/multiply_text_view"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginBottom="28dp"
        android:text="@string/multiply_text_view"
        app:layout_constraintBottom_toTopOf="@+id/division_text_view"
        app:layout_constraintEnd_toEndOf="@+id/subtraction_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/subtraction_text_view" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginBottom="48dp"
        android:text="@string/calculate_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/division_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/division_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>